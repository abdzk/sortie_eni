{% extends 'base.html.twig' %}

{% block body %}

    <h1>Afficher une sortie</h1>

    <div>Nom de la sortie : {{ sortie.nom }}</div>
    <div>Date et heure de la sortie : {{ sortie.dateHeureDebut|date("d/m/y à H:i") }}</div>
    <div>Date limite d'inscription : </div>
    <div>Nombre de place: {{ sortie.nbInscriptionsMax }}</div>
    <div>Durée: {{ sortie.duree }} Jours</div>
    <div>Description et infos: {{ sortie.infosSortie }}</div>
    <div>campus: {{ sortie.campus.nom }}</div>
    <div>Lieu: {{ sortie.lieu.nom }}</div>
    <div>Rue: {{ sortie.lieu.rue }}</div>
    <div>Code Postal: {{ sortie.lieu.ville.codePostal }}</div>
    <div>Latitude: {{ sortie.lieu.latitude }}</div>
    <div>Longitude: {{ sortie.lieu.longitude }}</div>

    <h1>Liste des participants inscrits:</h1>

    <div class="mt-3 mb-3 " >
        <table class="text-center"  >
            <tr>
                <th>Pseudo</th>
                <th>Nom</th>
            </tr>
            {% for user in sortie.users %}
            <tr>
                 <td>
                     {{user.pseudo}}
                 </td>
                <td>
                    {{ user.nom }} {{ user.prenom }}
                </td>
            </tr>
            {% endfor %}
        </table>

  </div>
{% endblock %}

{% block title %}

{% endblock %}

